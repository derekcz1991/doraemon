<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        >
        <com.derek.doraemon.view.CircleImageView
            android:id="@+id/userImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/hostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userImageView"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/userImageView"
            android:text="Lulu"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/userImageView"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/userImageView"
            android:text="2016年5月"
            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/userImageView"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/userImageView"
            android:src="@drawable/btn_adopt2"
            />
    </RelativeLayout>

    <com.derek.doraemon.view.SquaredImageView
        android:id="@+id/petImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />

    <TextView
        android:id="@+id/contentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        >
        <TextView
            android:id="@+id/likeBtn"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/divider"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_like"
            />
        <TextView
            android:id="@+id/commentBtn"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_below="@id/divider"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/likeBtn"
            android:background="@drawable/icon_comment"
            />
        <TextView
            android:id="@+id/msgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/likeBtn"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:alpha="0.6"
            android:text="留言"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/msgNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/likeBtn"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/msgText"
            android:text="13"
            />

        <TextView
            android:id="@+id/favText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/likeBtn"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/msgNumText"
            android:alpha="0.6"
            android:text="赞"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/favNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/likeBtn"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/favText"
            android:text="26"
            />
    </RelativeLayout>
</LinearLayout>