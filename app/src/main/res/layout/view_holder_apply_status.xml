<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="5dp"
    >
    <com.derek.doraemon.view.SquaredImageView
        android:id="@+id/petImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/hostLabelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/petImageView"
        android:text="房东 : "
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/hostLabelText"
        android:layout_toRightOf="@id/hostLabelText"
        android:text="Lulu Yang"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/btn_apply_accept"
        />
    <com.derek.doraemon.view.StarMarkView
        android:id="@+id/starMarkView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/hostLabelText"
        android:layout_below="@id/hostLabelText"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>